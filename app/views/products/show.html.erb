<p class="text-green-600"><%= notice %></p>

<div class="card bg-base-200 shadow-xl">
  <div class="card-body">
    <div class="card-title">
      <h1 class="text-4xl font-bold">Product Details</h1>
    </div>

    <%= render @product %>

    <div class="card-actions mt-4">
      <%= link_to "Update product", edit_product_path(@product), class: "btn btn-primary" %>
      <%= button_to "Delete product", @product, method: :delete, class: "btn btn-error" %>
      <%= link_to "Back", products_path, class: "btn btn-neutral" %>
    </div>
  </div>
</div>
