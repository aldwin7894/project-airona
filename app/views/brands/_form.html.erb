<%= form_with model: brand, class: "flex flex-col gap-2", id: "brand-form" do |form| %>
  <% if brand.errors.any? %>
    <div class="text-red-600">
      <h2><%= pluralize(brand.errors.count, "error") %>
        prohibited this brand from being saved:</h2>

      <ul>
        <% brand.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <label class="form-control w-full max-w-xs">
    <div class="label">
      <span class="label-text">Name</span>
    </div>
    <%= form.text_field :name, class: "input input-bordered w-full max-w-xs" %>
  </label>
<% end %>

<div class="card-actions mt-4">
  <input type="submit" value="Save" form="brand-form" class="btn btn-primary">
  <%= link_to "Cancel", brands_path, class: "btn btn-neutral" %>
</div>
