<p style="color: green"><%= notice %></p>

<div class="card bg-base-200 shadow-xl">
  <div class="card-body">
    <div class="card-title">
      <h1 class="text-4xl font-bold">Brand Details</h1>
    </div>

    <%= render @brand %>

    <div class="card-actions mt-4">
      <%= link_to "Update brand", edit_brand_path(@brand), class: "btn btn-primary" %>
      <%= button_to "Delete brand", @brand, method: :delete, class: "btn btn-error" %>
      <%= link_to "Back", brands_path, class: "btn btn-neutral" %>
    </div>
  </div>
</div>
