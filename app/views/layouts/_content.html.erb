<%= render "layouts/loader" %>
<%= render "layouts/header" %>

<main class="hidden w-full h-full overflow-x-clip" id="main">
  <div class="min-h-[calc(100vh-64px)] w-full">
    <%= yield :outside_container %>

    <div class="container mx-auto overflow-x-auto overflow-y-hidden py-5 flex flex-col gap-2">
      <%= yield %>
    </div>
  </div>
</main>

<%= render "layouts/footer" %>

<%= render partial: "partials/toasts" %>
<%= yield :page_script %>
